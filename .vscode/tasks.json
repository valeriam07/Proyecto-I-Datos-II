{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "PTypescript/tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "install",
            "path": "PTypescript/",
            "group": "build"
        },
        {
            "type": "npm",
            "script": "dev",
            "path": "PTypescript/",
            "problemMatcher": []
        }
    ]
}